{
  "variables": {
    "atlas_username": "stblassitude",
    "atlas_name": "freebsd",
    "version": null,

    "iso_url": null,
    "iso_checksum": null,
    "iso_checksum_type": "sha256",
    "boot_wait": "300s",
    "disk_size": "4096",
    "http_directory": "http",
    "ssh_username": "root",
    "ssh_password": "packer",
    "ssh_wait_timeout": "1000s",
    "shutdown_command": "shutdown -p now",
    "headless": "false",
    "HTTP_PROXY": "{{env `HTTP_PROXY`}}",
    "freebsd_rel": "11",
    "freebsd_version": "11.0"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "guest_os_type": "FreeBSD_64",

      "vm_name": "{{user `atlas_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "s<enter><wait>",
        "cd /tmp && dhclient em0<enter>",
        "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
        "bsdinstall script /tmp/installerconfig; reboot<enter>"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "guest_additions_mode": "disable",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--firmware", "efi"],
        ["modifyvm", "{{.Name}}", "--chipset", "ich9"],
        ["modifyvm", "{{.Name}}", "--boot1", "dvd"],
        ["modifyvm", "{{.Name}}", "--boot2", "disk"],
        ["modifyvm", "{{.Name}}", "--pae", "off"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"]
      ],
      "headless": "{{user `headless`}}"
    },
    {
      "type": "vmware-iso",
      "guest_os_type": "freebsd-64",

      "vm_name": "{{user `atlas_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "s<enter><wait>",
        "cd /tmp && dhclient em0 && ",
        "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
        "bsdinstall script /tmp/installerconfig; reboot<enter>"
      ],
      "boot_wait": "{{user `boot_wait`}}",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    },
    {
      "type": "qemu",

      "vm_name": "{{user `atlas_name`}}",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "boot_command": [
        "<enter><wait10><wait10><wait10><wait10>",
        "s<enter>",
        "cd /tmp && dhclient vtnet0 && ",
        "fetch http://{{ .HTTPIP }}:{{ .HTTPPort }}/installerconfig && ",
        "bsdinstall script /tmp/installerconfig; reboot<enter>"
      ],
      "boot_wait": "10s",
      "disk_size": "{{user `disk_size`}}",
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "{{user `ssh_wait_timeout`}}",
      "shutdown_command": "{{user `shutdown_command`}}",
      "headless": "{{user `headless`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh"
      ],
      "environment_vars": [
        "HTTP_PROXY={{user `HTTP_PROXY`}}",
        "VAGRANTBOX_URL=https://atlas.hashicorp.com/stblassitude/boxes/freebsd-{{user `freebsd_rel`}}",
        "VAGRANTBOX_VERSION={{user `version`}}"
      ],
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    },
    {
      "type": "shell",
      "script": "scripts/vmguest.sh",
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'",
      "only": [
        "virtualbox-iso",
        "vmware-iso"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; /bin/sh -c '{{ .Vars }} {{ .Path }}'"
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "vagrantfile_template": "vagrantfile.template",
        "keep_input_artifact": false
      },
      {
        "type": "atlas",
        "only": [
          "vmware-iso"
        ],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "vmware_desktop",
          "version": "{{user `version`}}",
          "description": "FreeBSD {{user `freebsd_version`}} amd64 image with freebsd-update(8) applied as of {{user `date`}}.  See https://github.com/stblassitude/packer-freebsd"
        }
      },
      {
        "type": "atlas",
        "only": [
          "qemu"
        ],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "libvirt",
          "version": "{{user `version`}}",
          "description": "FreeBSD {{user `freebsd_version`}} amd64 image with freebsd-update(8) applied as of {{user `date`}}.  See https://github.com/stblassitude/packer-freebsd"
        }
      },
      {
        "type": "atlas",
        "only": [
          "virtualbox-iso"
        ],
        "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
        "artifact_type": "vagrant.box",
        "metadata": {
          "provider": "virtualbox",
          "version": "{{user `version`}}",
          "description": "FreeBSD {{user `freebsd_version`}} amd64 image with freebsd-update(8) applied as of {{user `date`}}.  See https://github.com/stblassitude/packer-freebsd"
        }
      }
    ]
  ],
  "push": {
    "name": "{{user `atlas_username`}}/{{user `atlas_name`}}",
    "vcs": true
  }
}
